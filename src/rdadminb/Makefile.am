AM_CPPFLAGS = -Wall -DPREFIX=\"$(prefix)\" -DARCH=\"@ARCH@\" -DOS=\"@OS@\" -Wno-strict-aliasing -std=c++11 -fPIC -I$(top_srcdir)/lib @QT5_CFLAGS@ @RIVWEBCAPI_CFLAGS@
MOC = @QT_MOC@

# Qt compiler dependencies
moc_%.cpp:	%.h
	$(MOC) $< -o $@
qrc_%.cpp:	%.qrc
	rcc $< -o $@

# The dependency for Windows resource compiler
%.o:	%.rc
	$(WINDRES) -O coff $< $@

bin_PROGRAMS = rdadminb

dist_rdadminb_SOURCES = rdadminb.cpp rdadminb.h

nodist_rdadminb_SOURCES = cmdswitch.cpp cmdswitch.h\
                          combobox.cpp combobox.h\
                          config.cpp config.h\
                          datetime.cpp datetime.h\
                          moc_combobox.cpp\
                          moc_config.cpp\
                          moc_rdadminb.cpp\
                          qrc_bitmaps.cpp\
                          profile.cpp profile.h

EXTRA_rdadminb_DEPENDENCIES = @RESOURCES@

rdadminb_LDADD = @QT5_LIBS@ @RIVWEBCAPI_LIBS@ @MME_LIBS@ -lexpat @RESOURCES@ -lpthread
rdadminb_LDFLAGS = @LDFLAGS@

EXTRA_DIST = bitmaps.qrc\
             icons.rc

CLEANFILES = *~\
             moc_*\
             *.obj\
             *.idb\
             *.pdb\
             *ilk

DISTCLEANFILES = *.bmp\
                 *.ico\
                 cartfilterwidget.cpp cartfilterwidget.h\
                 cmdswitch.cpp cmdswitch.h\
                 combobox.cpp combobox.h\
                 config.cpp config.h\
                 datetime.cpp datetime.h\
                 librarymodel.cpp librarymodel.h\
                 log.cpp log.h\
                 logline.cpp logline.h\
                 logmodel.cpp logmodel.h\
                 loglistmodel.cpp loglistmodel.h\
                 mpeg1decoder.cpp mpeg1decoder.h\
                 playerfactory.cpp playerfactory.h\
                 profile.cpp profile.h\
                 qrc_*\
                 ringbuffer.cpp ringbuffer.h\
                 streamplayer.cpp streamplayer.h\
                 streamplayer_alsa.cpp streamplayer_alsa.h\
                 streamplayer_mme.cpp streamplayer_mme.h\
                 tableview.cpp tableview.h\
                 transportbutton.cpp transportbutton.h

MAINTAINERCLEANFILES = *~\
                       Makefile.in
